{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "outDir": "./build",
        "lib": ["es2017"]
    },
    "include": ["./src/**/*"],
    "exclude": [
        "./node_modules"
    ]
}